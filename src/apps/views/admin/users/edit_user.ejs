<%- include("../layout/index", {title: "Quản lý thông tin"}) %>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">           
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="/admin/dashboard"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
			<li><a href="/admin/users">Quản lý thành viên</a></li>
            <li class="active"><%= page.user_info.full_name %></li>
        </ol>
    </div>
    
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Thành viên: <%= page.user_info.full_name %></h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">            

            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-md-8">

                        <% if (page.error > 0 ) { %>
                        <div class="alert alert-danger">
                            <% if (page.error == 1 ) { %> Email đã tồn tại <% } %>
                            <% if (page.error == 2 ) { %> Mật khẩu không khớp ! <% } %>
                        </div>
                        <% } %>
                        
                        <form role="form" method="post" action="/admin/users/update/<%= page.user_info.id %>">
                            <div class="form-group">
                                <label>Họ & Tên</label>
                                <input name="full_name" value="<%= page.user_info.full_name %>" class="form-control" placeholder="">
                            </div>

                            <div class="form-group">
                                <label>Email</label>
                                <input name="email" value="<%= page.user_info.email %>" type="text" class="form-control">
                            </div>   

                            <div class="form-group">
                                <label>Mật khẩu</label>
                                <input name="password" type="password" value="<%= page.user_info.password %>" class="form-control">
                            </div>

                            <div class="form-group">
                                <label>Nhập lại mật khẩu</label>
                                <input name="re_password" type="password" value="<%= page.user_info.password %>" class="form-control">
                            </div>

                            <div class="form-group">
                                <label>Quyền</label>
                                <select name="role" class="form-control">
                                    <option value="admin" <% if (page.user_info.role == 'admin') { %> selected <% } %> >Admin</option>
                                    <option value="member" <% if (page.user_info.role == 'member') { %> selected <% } %> >Member</option>
                                </select>
                            </div>
                            <button name="sbm" type="submit" class="btn btn-success"> Sửa </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../layout/footer") %>